﻿@{
    ViewData["Title"] = "City List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*@model AddressBookMulti.Areas.EMP_Employee.Models.EMP_EmployeeModel;*@

<div class="page-content-wrapper">
    <!-- BEGIN CONTENT BODY -->
    <div class="page-content">
        <!-- BEGIN PAGE HEADER-->
        <!-- BEGIN PAGE BAR -->
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a asp-action="Index" asp-controller="Home">Home</a>
                    <i class="fa fa-circle"></i>
                </li>
                <li>
                    <span>City List</span>
                </li>
            </ul>

        </div>
        <!-- END PAGE BAR -->
        <!-- BEGIN PAGE TITLE-->

        <div class="portlet box red">
            <div class="portlet-title">
                <div class="caption">
                    <i class="fa fa-globe"></i>Employee Details
                </div>
                <div class="actions">
                    <button id="btnAddEmployee" class="btn btn-default btn-sm btn dark" data-toggle="modal">
                        <i class="fa fa-plus"></i> Add
                    </button>
                </div>
            </div>
            <div class="portlet-body">
                <table class="table table-striped table-bordered table-hover table-header-fixed " id="dataTableData">
                    <thead>
                        <tr>
                            <th> Employee Name </th>
                            <th> Address </th>
                            <th> Birthdate </th>
                            <th class="text-center"> Action </th>
                            <th class="dhruv" id="dhruv">

                            </th>
                        </tr>
                    </thead>
                    <tbody id="body">
                    </tbody>
                </table>
            </div>
        </div>
        <div class="modal fade" id="EmployeeModel" tabindex="-1" role="basic" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
                        <h4 class="modal-title">Add Employee</h4>
                    </div>
                    <div class="modal-body">
                        <div class="portlet light bordered">
                            <div class="portlet-body form">
                                <form role="form" method="post" id="employeeForm">
                                    <div class="form-body">
                                        <input type="hidden" id="EmployeeID" />
                                        <div id="empName" class="form-group form-md-line-input">
                                            <input type="text" class="form-control" name="name" id="Name" placeholder="Enter your name">
                                            <label for="form_control_1">
                                                Name
                                                <span class="required">*</span>
                                            </label>
                                            <span class="help-block">Enter your name...</span>
                                        </div>
                                        <div id="empAddress" class="form-group form-md-line-input">
                                            <input type="text" class="form-control" name="Address" id="Address" placeholder="Enter your Address">
                                            <label for="form_control_1">
                                                Address
                                                <span class="required">*</span>
                                            </label>
                                            <span class="help-block">Enter your Address...</span>
                                        </div>
                                    </div>
                                    <div class="modal-footer">
                                        <button type="button" class="btn dark btn-outline" data-dismiss="modal" onclick="clearControl()">Close</button>
                                        <input id="btnSaveEmployee" type="button" class="btn green" value="Save changes" onclick="btnSave()" />
                                        <input id="btnUpdateEmployee" type="button" class="btn green" value="Update" style="display:none" onclick="btnUpdate()" />

                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>

                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>
    <!-- END CONTENT BODY -->
</div>


<div class="clearfix"></div>